{
  "openapi": "3.0.3",
  "info": {
    "title": "The Lord of the Rings SDK- OpenAPI 3.0",
    "description": "",
    "contact": {
      "email": "code@liblab.com"
    },
    "version": "1.0.11"
  },
  "paths": {
    "/movie": {
      "get": {
        "summary": "Finds movies by status",
        "description": "List of all movies, including the \"The Lord of the Rings\" and the \"The Hobbit\" trilogies",
        "operationId": "findMoviesByLordOfTheRings",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "returns all movies",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Movie"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          }
        }
      }
    },
    "/movie/{id}": {
      "get": {
        "summary": "Find movie by ID",
        "description": "Returns a single movie",
        "operationId": "getMovieById",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of movie to return",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "returns Lord of the ring movie by specified id",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Movie"
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "movie not found"
          }
        }
      }
    },
    "/movie/{id}/quote": {
      "get": {
        "tags": [
          "movie"
        ],
        "summary": "requests movie quote for specific movie",
        "description": "",
        "operationId": "quoteForSpecificMovie",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of movie quote requested",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Request all movie quotes for one specific movie (only working for the LotR trilogy)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer",
                  "format": "int64"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Movie": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Fellowship of the ring"
          }
        }
      }
    }
  }
}
